# ==============================================================================
# TRAVIO - Docker Compose Environment Variables
# ==============================================================================
# Copy this file to .env in the same directory as docker-compose.yml

# ==============================================================================
# INFRASTRUCTURE IMAGES
# ==============================================================================
POSTGRES_IMAGE=postgres:15-alpine
REDIS_IMAGE=redis:7-alpine
KAFKA_IMAGE=bitnami/kafka:3.6
OPENSEARCH_IMAGE=opensearchproject/opensearch:2.11.0
MINIO_IMAGE=minio/minio:latest

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Databases (will be created automatically)
# - travio_identity
# - travio_catalog
# - travio_inventory
# - travio_orders
# - travio_payment
# - travio_fulfillment
# - travio_pricing
# - travio_notification

# ==============================================================================
# REDIS
# ==============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================================================
# KAFKA
# ==============================================================================
KAFKA_BROKER=kafka:9092

# ==============================================================================
# OPENSEARCH
# ==============================================================================
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# ==============================================================================
# MINIO
# ==============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000

# ==============================================================================
# SECURITY
# ==============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
QR_SECRET_KEY=your-super-secret-key-for-qr-signing

# ==============================================================================
# SERVICE PORTS (Host:Container)
# ==============================================================================
GATEWAY_PORT=8888
IDENTITY_GRPC_PORT=9081
IDENTITY_HTTP_PORT=8081
CATALOG_GRPC_PORT=9082
INVENTORY_GRPC_PORT=9083
ORDER_GRPC_PORT=9084
PAYMENT_GRPC_PORT=9085
FULFILLMENT_GRPC_PORT=9086
QUEUE_GRPC_PORT=9087
SEARCH_GRPC_PORT=9088
PRICING_GRPC_PORT=50058
NOTIFICATION_GRPC_PORT=9090
