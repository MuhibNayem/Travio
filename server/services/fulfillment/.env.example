# ==============================================================================
# TRAVIO - Fulfillment Service Environment Variables
# ==============================================================================

# Server Ports
GRPC_PORT=9086
HTTP_PORT=8086

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=travio_fulfillment
DB_SSLMODE=disable

# MinIO (Object Storage for tickets)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=tickets
MINIO_USE_SSL=false

# QR Code
QR_SECRET_KEY=your-super-secret-key-for-qr-signing

# Company Info (for ticket generation)
COMPANY_NAME=Travio

# Kafka (for order events)
KAFKA_BROKERS=localhost:9092

# mTLS Configuration (optional for dev)
# TLS_CERT_FILE=../../certs/fulfillment.crt
# TLS_KEY_FILE=../../certs/fulfillment.key
# TLS_CA_FILE=../../certs/ca.crt
