# ==============================================================================
# TRAVIO - Notification Service Environment Variables
# ==============================================================================

# Server Ports
GRPC_PORT=9090
HTTP_PORT=8090

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/travio_notification?sslmode=disable

# Kafka (for event consumption)
KAFKA_BROKERS=localhost:9092

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@travio.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_FILE=./firebase-credentials.json

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# mTLS Configuration (optional for dev)
# TLS_CERT_FILE=../../certs/notification.crt
# TLS_KEY_FILE=../../certs/notification.key
# TLS_CA_FILE=../../certs/ca.crt
