# ==============================================================================
# TRAVIO - Identity Service Environment Variables
# ==============================================================================

# Server Ports
GRPC_PORT=9081
HTTP_PORT=8081

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/travio_identity?sslmode=disable

# Redis (for session management)
REDIS_URL=localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# mTLS Configuration (optional for dev)
# TLS_CERT_FILE=../../certs/identity.crt
# TLS_KEY_FILE=../../certs/identity.key
# TLS_CA_FILE=../../certs/ca.crt
