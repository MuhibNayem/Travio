# ==============================================================================
# TRAVIO - Inventory Service Environment Variables
# ==============================================================================

# Server Ports
GRPC_PORT=9083
HTTP_PORT=8083

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/travio_inventory?sslmode=disable

# Redis (for hold management and caching)
REDIS_URL=localhost:6379

# Hold Configuration
HOLD_TTL_SECONDS=600

# mTLS Configuration (optional for dev)
# TLS_CERT_FILE=../../certs/inventory.crt
# TLS_KEY_FILE=../../certs/inventory.key
# TLS_CA_FILE=../../certs/ca.crt
