# ==============================================================================
# TRAVIO - Complete Environment Variables
# ==============================================================================
# This file contains ALL environment variables for the entire Travio platform.
# Copy this file to .env and update values for your environment.
#
# For individual service configuration, see each service's .env.example file:
#   services/gateway/.env.example
#   services/identity/.env.example
#   services/catalog/.env.example
#   services/inventory/.env.example
#   services/order/.env.example
#   services/payment/.env.example
#   services/fulfillment/.env.example
#   services/queue/.env.example
#   services/pricing/.env.example
#   services/search/.env.example
#   services/notification/.env.example
# ==============================================================================

# ==============================================================================
# INFRASTRUCTURE
# ==============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# OpenSearch
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# MinIO (Object Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ==============================================================================
# GATEWAY SERVICE
# ==============================================================================
GATEWAY_HTTP_PORT=8888
GATEWAY_IDENTITY_URL=localhost:9081
GATEWAY_CATALOG_URL=localhost:9082
GATEWAY_INVENTORY_URL=localhost:9083
GATEWAY_ORDER_URL=localhost:9084
GATEWAY_PAYMENT_URL=localhost:9085
GATEWAY_FULFILLMENT_URL=localhost:9086
GATEWAY_SEARCH_URL=localhost:9088
GATEWAY_PRICING_URL=localhost:50058
GATEWAY_QUEUE_URL=localhost:9087
GATEWAY_JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ==============================================================================
# SERVICE PORTS
# ==============================================================================
# Format: SERVICE_GRPC_PORT / SERVICE_HTTP_PORT

IDENTITY_GRPC_PORT=9081
IDENTITY_HTTP_PORT=8081

CATALOG_GRPC_PORT=9082
CATALOG_HTTP_PORT=8082

INVENTORY_GRPC_PORT=9083
INVENTORY_HTTP_PORT=8083

ORDER_GRPC_PORT=9084
ORDER_HTTP_PORT=8084

PAYMENT_GRPC_PORT=9085
PAYMENT_HTTP_PORT=8085

FULFILLMENT_GRPC_PORT=9086
FULFILLMENT_HTTP_PORT=8086

QUEUE_GRPC_PORT=9087
QUEUE_HTTP_PORT=8087

SEARCH_GRPC_PORT=9088
SEARCH_HTTP_PORT=8088

PRICING_GRPC_PORT=50058
PRICING_HTTP_PORT=8058

NOTIFICATION_GRPC_PORT=9090
NOTIFICATION_HTTP_PORT=8090

# ==============================================================================
# PAYMENT GATEWAYS
# ==============================================================================

# SSLCommerz
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWD=your_store_passwd
SSLCOMMERZ_SANDBOX=true

# bKash
BKASH_APP_KEY=your_app_key
BKASH_APP_SECRET=your_app_secret
BKASH_USERNAME=your_username
BKASH_PASSWORD=your_password
BKASH_SANDBOX=true

# Nagad
NAGAD_MERCHANT_ID=your_merchant_id
NAGAD_MERCHANT_NUMBER=your_merchant_number
NAGAD_PUBLIC_KEY=your_public_key
NAGAD_PRIVATE_KEY=your_private_key
NAGAD_SANDBOX=true

# ==============================================================================
# NOTIFICATION PROVIDERS
# ==============================================================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@travio.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_FILE=./firebase-credentials.json

# ==============================================================================
# mTLS CONFIGURATION (Production)
# ==============================================================================
# Uncomment and set paths to enable mTLS for service-to-service communication

# TLS_CERT_FILE=./certs/service.crt
# TLS_KEY_FILE=./certs/service.key
# TLS_CA_FILE=./certs/ca.crt

# ==============================================================================
# SECURITY
# ==============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
QR_SECRET_KEY=your-super-secret-key-for-qr-signing
QUEUE_TOKEN_SECRET=travio-super-secret-key-change-in-prod
